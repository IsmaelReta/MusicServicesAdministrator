@model List<Author>

@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

<p>
    <a asp-controller="Authors" asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h4>GUID</h4>
            </th>
            <th>
                <h4>NAME</h4>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
             <td>
                    @Html.DisplayFor(modelItem => item.FullName)
             </td>
            <td>
                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Authors" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

